{
    "name": "calliostro/lastfm-client",
    "description": "Ultra-lightweight Last.fm API client for PHP 8.1+ with modern Guzzle-based implementation - Only two classes, service descriptions, zero bloats",
    "type": "library",
    "keywords": [
        "php8",
        "php",
        "lastfm",
        "lastfm-api",
        "music",
        "api",
        "client",
        "scrobble",
        "scrobbling",
        "audioscrobbler",
        "lightweight",
        "rest-api",
        "guzzle"
    ],
    "homepage": "https://github.com/calliostro/lastfm-client",
    "license": "MIT",
    "authors": [
        {
            "name": "calliostro",
            "email": "calliostro@gmail.com",
            "role": "Author"
        }
    ],
    "require": {
        "php": "^8.1",
        "guzzlehttp/guzzle": "^6.5 || ^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "squizlabs/php_codesniffer": "^3.7",
        "phpstan/phpstan": "^1.10"
    },
    "autoload": {
        "psr-4": {
            "Calliostro\\LastFm\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Calliostro\\LastFm\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "cs": "phpcs --standard=PSR12 --exclude=Generic.Files.LineLength src/",
        "cs-fix": "phpcbf --standard=PSR12 --exclude=Generic.Files.LineLength src/",
        "analyse": "phpstan analyse src/ --level=8"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
